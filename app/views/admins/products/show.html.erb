


  <div class="row", style="font-family: 'Hannotate SC',sans-serif;">


    <h2>商品詳細画面</h2>
      <div class="col-lg-4">
        <%= attachment_image_tag @product, :image, :fill, 300, 200 %>
      </div>


        <div class="col-lg-6">
          <table class="nonborder">
            <tbody>
              <tr>
                <td>商品名</td>
                <td><%= @product.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @product.description %></td>
              </tr>
              <tr>
                <td>ジャンル</td>
                <td><%= @product.genre.name %></td>
              </tr>
              <tr>
                <td>税込価格（税抜き価格）</td>
                <td><%= @product.unit_price %></td>
              </tr>
              <tr>
                <td>販売ステータス</td>
                <td><%if @product.is_selling == true %>
                      販売中
                    <% else %>
                      販売停止中
                    <% end %></td>
              </tr>
            </tbody>
          </table>
        </div>

            <%= link_to "編集する",edit_admins_product_path, class: 'btn btn-info btn-lg col-lg-offset-12' %>

  </div>


  </div>
