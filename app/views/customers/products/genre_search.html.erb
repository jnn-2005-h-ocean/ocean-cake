
<div class="row">
	<!-- 左側　ジャンル -->
	<div class="col-xs-3">
		<table>
				<thead>
					<th>ジャンル検索</th>
				</thead>

				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
					</tr>
				<% end %>
		</table>
	</div>



	<div class="col-xs-9">

		<h3><%= @genre.name %>一覧</h3>

		<% i = 0 %>
		<table class="nonborder">
			<% @products.each do |product| %>
				<td>
					<%= link_to customers_product_path(product.id) do %>
					<%= attachment_image_tag product, :image, :fill, 200, 150 %>
				<br>
	        		<%= product.name %>
	        	<br>
	        		<p><%= product.unit_price %>円</p>
	    			<% end %>
	    		</td>
	    		<!-- 4つ毎に改行 -->
					<% i = i + 1 %>
					<% if i % 4 == 0 %>
						<tr></tr>
					<% end %>
	    	<% end %>
		</table>

	</div>