<div class="row">
  <div class="col-xs-8 col-xs-offset-2">

    <div class="mypage-title" style="margin-left: 5%;">
	  <mark style="font-size: 20px;">会員一覧</mark>
	</div>

	<table class="table table-inverse margin-30">
	  <% if current_customer.id.any? %>
	    <thead>
	      <tr class="active">
		    <th style="width:10%">会員ID</th>
		    <th style="width:30%">氏名</th>
		    <th style="width:30%">メールアドレス</th>
		    <th style="width:30%">ステータス</th>
		  </tr>
	    </thead>
	  <% @customers.each do |custmer| %>
	    <tbody>
		  <tr>
		    <td><%= custmer.id %></td>
			<td><%=link_to "#{custmer.family_name} #{custmer.first_name}", admins_custmer_path(custmer.id) %></td>
			<td><%= custmer.email %></td>
			<td>
	          <% if custmer.is_false == true %>
		        <p>有効</p>
		      <% else %>
		        <p>退会済</p>
		      <% end %>
			</td>
		  </tr>
		</tbody>
	  <% end %>
	  <% else %>
	    <p>該当する会員は見つかりませんでした</p>
	  <% end %>
	</table>

    <div id="page">
      <%= paginate @custmers, class: "paginate" %>
    </div>

  </div>
</div>