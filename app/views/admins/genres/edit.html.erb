
<div class="container", style="font-family: 'Hannotate SC',sans-serif";>
	<div class="row">

		<% if @genre.errors.any? %>
		<div class="alert alert-danger" role="alert">
			<h4 class="alert-heading"><%= pluralize(@genre.errors.count, "error") %></h4>
			<p><%= pluralize(@genre.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
			<hr>
			<p class="mb-0">
				<% @genre.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</p>
		</div>
		<% end %>

		<h3>ジャンル一覧・追加</h3>

		<%= form_for @genre, url: admins_genre_path do |f| %>

		<div>
			<%= f.label :name, "ジャンル名" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div>
			<%= f.radio_button :is_active, :true %>
			<%= f.label :is_active, "有効" %>
		</div>

		<div>
			<%= f.radio_button :is_active, :false %>
			<%= f.label :is_active, "無効" %>
		</div>

		<%= f.submit "変更を保存する", class: "btn btn-primary" %>

		<% end %>

	</div>
</div>