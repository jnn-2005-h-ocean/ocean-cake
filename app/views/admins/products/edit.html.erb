
<div class="row", style="font-family: 'Hannotate SC',sans-serif;">


  <% if @product.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@product.errors.count, "error") %></h4>
    <p><%= pluralize(@product.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </p>
  </div>
  <% end %>

  <%= form_for @product, url: admins_product_path do |f| %>
  <h2>商品編集</h2>
  <div class="col-xs-4">
    <%= attachment_image_tag @product, :image, :fill, 300, 200 %>
    <%= f.attachment_field :image %>
  </div>


  <div class="col-lg-6">
    <div class="field form-group">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :description, "商品紹介" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :genre, "ジャンル" %><br>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name,:prompt => "選択してください") %>
    </div>

    <div class="field form-group">
      <%= f.label :unit_price, "税抜き価格" %>
      <%= f.number_field :unit_price, class: "form-control" %>
    </div>


    <div class="field form-group">
     <%= f.label :is_selling, "販売ステータス" %><br>
     <%= f.select :is_selling, {販売中: 1, 販売停止: 0}, class: "form-control" %>
   </div>

   <div class="col-xs-2 col-xs-offset-10">
     <div class="action">
       <%= f.submit "変更を保存", class: "btn btn-primary btn-lg" %>
     </div>
   </div>

   <% end %>

 </div>
