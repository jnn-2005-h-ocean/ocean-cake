
<div class="container", style="font-family: 'Hannotate SC',sans-serif";>
	<div class="row">

    <% if @genre.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@genre.errors.count, "error") %></h4>
      <p><%= pluralize(@genre.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
      <hr>
      <p class="mb-0">
        <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </p>
    </div>
    <% end %>

    <h3>ジャンル一覧・追加</h3>

    <%= form_for @genre, url: admins_genres_path do |f| %>

    <div>
     <%= f.label :name, "ジャンル名" %>
     <%= f.text_field :name, class: "form-control" %>
   </div>

   <div>
     <%= f.radio_button :is_active, :true %>
     <%= f.label :is_active, "有効" %>
   </div>

   <div>
     <%= f.radio_button :is_active, :false %>
     <%= f.label :is_active, "無効" %>
   </div>

   <%= f.submit "追加", class: "btn btn-primary" %>

   <% end %>


   <table class="table">

    <thead>
      <tr class="active">
       <th style>ジャンル</th>
       <th style>状態</th>
       <th></th>
       <th></th>
     </tr>
   </thead>

   <tbody>
    <% @genres.each do |genre| %>

    <tr>
     <td><%= genre.name %></td>
     <% if genre.is_active == true %>
     <td>有効</td>
     <% else %>
     <td>無効</td>
     <% end %>
     <td><%= link_to "編集する",edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
     <td><%= link_to "削除する", admins_genre_path(genre.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %></td>
   </tr>

   <% end %>

 </tbody>

</table>

</div>
</div>