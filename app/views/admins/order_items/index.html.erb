

<div class="row", style="font-family: 'Hannotate SC',sans-serif;">
  <div class="col-xs-8 col-xs-offset-2">

    <div class="mypage-title" style="margin-left: 5%;">
	  <mark style="font-size: 20px;">注文履歴一覧</mark>
	</div>

	<table class="table table-inverse margin-30">

	    <thead>
	      <tr class="active">
		    <th style="width:10%">購入日時</th>
		    <th style="width:30%">購入者</th>
		    <th style="width:30%">注文個数</th>
		    <th style="width:30%">注文ステータス</th>
		  </tr>
	    </thead>
	<% @orders.each do |order| %>
	    <tbody>
		  <tr>
		    <td>
		    	<%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admins_order_item_path(order.id) %>
		    </td>
			<td>
				<%= "#{order.customer.family_name}　#{order.customer.first_name}" %>
			</td>
			<td><%= order.order_items.sum(:number) %>個</td>
			<% case order.order_status %>
				<% when "wait_deposit" %>
			<td>入金待ち</td>
				<% when "payment_confirmation" %>
			<td>入金確認</td>
				<% when "inproduction" %>
			<td>製作中</td>
				<% when "preparing_for_shipment" %>
			<td>発送準備中</td>
				<% when "sent" %>
			<td>発送済み</td>
			<% end %>
		  </tr>
		</tbody>
		<% end %>
	</table>

  </div>
</div>