<!-- ジャンル検索機能 -->
<div class="row", style="font-family: 'Hannotate SC',sans-serif; text-align: center;">
	<div class="col-xs-4">
		<h3 style="text-align: center;">ジャンル検索</h3>
		<% @genres.each do |genre| %>
		<ul class="list-group", style="text-align: center;">
			<%= link_to genre.name,genre_search_customers_product_path(genre.id), class: "btn btn-default btn-block" %>
		</ul>
		<% end %>
	</div>

	<!-- 新　右側　サイトの紹介 -->

	<div class="col-xs-8">
		<div class="box1">
			<div style="font-size: 25px; color: #FF6600; position: relative; display: inline-block;">
				<img src="assets/top.cake1.png" alt="写真" width="700" height="400">
				<div style="position: absolute; top: 200px; left: 25px; max-width: 100%; max-height: 100%; padding: 30px; text-align: left;">
					<strong><p>ようこそ、NaganoCakeへ！<br>
						このサイトは、ケーキ販売のECサイトになります。<br>
						会員の方も商品の閲覧はできますが、<br>
						購入には会員登録が必要になります。
					</p></strong>
				</div>
			</div>
		</div>
	</div>


<!-- 新　右下のオススメ欄 -->
<div class="col-xs-12">
	<div class="recommend-items">
		<h3 style="font-family: 'Hannotate SC',sans-serif; text-align: left;">オススメ商品
			<%= link_to "もっと見る", customers_products_path, class: "btn btn-primary" %>
		</h3>
	</div>
</div>

<div class="row">
	<% @products.first(4).each do |product| %> <!-- firstをつけると配列に対して回数を指定することができる -->

		<div class="col-xs-3">
			<div class="thumbnail">
				<%= link_to customers_product_path(product.id) do %>
				<%= attachment_image_tag product, :image, :fill, 200, 150 %>
				<% end %>
				<div class="caption">
					<p><%= product.name %></p>
					<p><%= (product.unit_price * 1.1).round(0) %>円</p>
					<% if product.is_selling == false %>
						<font color="red">売り切れ</font>
					<% else %>
						<font color="green">&emsp;&emsp;&emsp;</font>
					<% end %>
				</div>

			</div>
		</div>
	<% end %>
</div>


</div>