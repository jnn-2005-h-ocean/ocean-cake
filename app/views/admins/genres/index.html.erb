
<div class="container">
	<div class="row">

		<h3>ジャンル一覧・追加</h3>

		<%= form_for @genre, url: admins_genres_path do |f| %>

		<div>
        	<%= f.label :name, "ジャンル名" %>
        	<%= f.text_field :name, class: "form-control" %>
      	</div>

      	<div>
			<%= f.radio_button :is_active, :true %>
			<%= f.label :is_active, "有効" %>
		</div>

		<div>
			<%= f.radio_button :is_active, :false %>
			<%= f.label :is_active, "無効" %>
		</div>

		<%= f.submit "追加", class: "btn btn-primary" %>

      	<% end %>


		<table class="table">

      		<thead>
       			<tr class="active">
          			<th style>ジャンル</th>
          			<th style>状態</th>
                <th></th>
                <th></th>
        		</tr>
      		</thead>

      		<tbody>
        		<% @genres.each do |genre| %>

        		<tr>
          			<td><%= genre.name %></td>
          			<% if genre.is_active == true %>
						        <td>有効</td>
                <% else %>
                    <td>無効</td>
                <% end %>
                <td><%= link_to "編集する",edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
                <td><%= link_to "Destroy", admins_genre_path(genre.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
        		</tr>

        		<% end %>

      		</tbody>

    	</table>

	</div>
</div>