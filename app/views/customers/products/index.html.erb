<div class="row", style="font-family: 'Hannotate SC',sans-serif; text-align: center;">
	<!-- 左側　ジャンル -->
	<div class="col-xs-3">
		<h3 style="font-family: 'Hannotate SC',sans-serif; text-align: center;">ジャンル検索</h3>
		<% @genres.each do |genre| %>
		<ul class="list-group", style="text-align: center;">
			<%= link_to genre.name,genre_search_customers_product_path(genre.id), class: "btn btn-default btn-block" %>
		</ul>
		<% end %>
	</div>

	<div class="col-xs-9">
		<h3>商品一覧</h3>
		<% @products.each do |product| %> <!-- firstをつけると配列に対して回数を指定することができる -->

		<div class="col-xs-3">
			<div class="thumbnail">
					<%= link_to customers_product_path(product.id) do %>
					<%= attachment_image_tag product, :image, :fill, 200, 150 %>
					<% end %>
					<div class="caption">
						<p><%= product.name %></p>
						<p><%= (product.unit_price * 1.1).round(0) %>円</p>
						<% if product.is_selling == false %>
							<font color="red">売り切れ</font>
						<% else %>
							<font color="green">&emsp;&emsp;&emsp;</font>
						<% end %>
					</div>

			</div>
		</div>
		<% end %>
		<%= paginate @products %>
	</div>
</div>

