
<div class="container">
	<div class="row">

		<h3>ジャンル一覧・追加</h3>

		<%= form_for @genre, url: admins_genre_path do |f| %>

		<div>
        	<%= f.label :name, "ジャンル名" %>
        	<%= f.text_field :name, class: "form-control" %>
      	</div>

      	<div>
			<%= f.radio_button :is_active, :true %>
			<%= f.label :is_active, "有効" %>
		</div>

		<div>
			<%= f.radio_button :is_active, :false %>
			<%= f.label :is_active, "無効" %>
		</div>

		<%= f.submit "変更を保存する", class: "btn btn-primary" %>

      	<% end %>

	</div>
</div>