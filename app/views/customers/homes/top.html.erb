<!-- ジャンル検索機能 -->
<div class="row">
	<div class="col-xs-4">
		<h3 style="font-family: 'Hannotate SC',sans-serif; text-align: center;">ジャンル検索</h3>
		<% @genres.each do |genre| %>
		<div style="text-align: center; font-family: 'Hannotate SC',sans-serif;">
			<ul class="list-group">
				<li class="list-group-item"><%= link_to genre.name,genre_search_customers_product_path(genre.id) %></li>
			</ul>
		</div>
		<% end %>
	</div>


	<!-- 新　右側　サイトの紹介 -->

	<div class="col-xs-8">
		<div class="box1">
			<div style="font-size: 20px; position: relative; display: inline-block;">
				<img src="assets/top.cake1.png" alt="写真" width="700" height="400">
				<div style="position: absolute; top: 200px; left: 25px; max-width: 100%; max-height: 100%; padding: 30px; text-align: left;">
					<strong><p style="font-family: 'Hannotate SC',sans-serif;">ようこそ、NaganoCakeへ！<br>
						このサイトは、ケーキ販売のECサイトになります。<br>
						会員の方も商品の閲覧はできますが、<br>
						購入には会員登録が必要になります。
					</p></strong>
				</div>
			</div>
		</div>
	</div>
</div>


<!-- 新　右下のオススメ欄 -->
<div class="col-xs-12">
	<div class="recommend-items">
		<h3 style="font-family: 'Hannotate SC',sans-serif;">オススメ商品</h3>
	</div>
</div>

<div class="row">
	<% @products.first(4).each do |product| %> <!-- firstをつけると配列に対して回数を指定することができる -->

	<div class="row"> <!-- ---------------row------------------------ -->
		<div class="col-xs-3">
			<div class="thumbnail">
				<%= link_to customers_product_path(product.id) do %>
				<%= attachment_image_tag product, :image, :fill, 200, 150 %>
				<% end %>
			</div>
			<div class="caption">
				<p><%= product.name %></p>
				<p><%= product.unit_price %>円</p>
			</div>
		</div>
		<% end %>
	</div> <!-- ---------------row------------------------ -->
</div>



