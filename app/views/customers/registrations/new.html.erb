

<h2>新規会員登録</h2>



<% if @customer.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@customer.errors.count, "error") %></h4>
    <p><%= pluralize(@customer.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </p>
  </div>
  <% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <table class="table" id="none-border">
    <tbody>

  <tr>
    <td>名前</td>
    <td><%= f.label :姓 %>
     <%= f.text_field :family_name %>
   </td>
    <td> <%= f.label :名 %>
     <%= f.text_field :first_name %>
    </td>
  </tr>

  <tr>
   <td>フリガナ</td>
   <td> <%= f.label :ｾｲ %>
     <%= f.text_field :family_name_kana %>
   </td>
   <td> <%= f.label :ﾒｲ　%>
     <%= f.text_field :first_name_kana %>
    </td>
  </tr>

  <tr>
    <td> <%= f.label :メールアドレス %></td>
    <td> <%= f.email_field :email %></td>
  </tr>

  <tr>
    <td> <%= f.label :郵便番号 %></td>
    <td> <%= f.text_field :postal_code %></td>
  </tr>

  <tr>
    <td> <%= f.label :住所 %></td>
    <td> <%= f.text_field :address %></td>
  </tr>

  <tr>
    <td> <%= f.label :電話番号 %> </td>
    <td> <%= f.text_field :telephone_number %></td>
  </tr>

  <tr>
    <td> <%= f.label :パスワード %></td>
    <td> <%= f.password_field :password %></td>
  </tr>

  <tr>
    <td> <%= f.label :パスワード（確認用） %></td>
    <td> <%= f.password_field :password_confirmation %></td>
  </tr>

  <tr>
    <td> <%= f.submit "新規登録", class: "btn btn-success btn-lg col-lg-offset-12" %></td>
  </tr>
</tbody>
</table>

<% end %>


<h3>既に登録済みの方</h3>
<div class="col-xs-12">
<%= link_to "こちら", new_customer_session_path %>からログインしてください。
</div>

