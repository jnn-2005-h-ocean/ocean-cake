
<div class = "container">
  <div class="row">

   <div class="mypage-title">
    <mark style="font-size: 20px;">商品登録</mark>
    <%= form_for @product, url: admins_products_path do |f| %>
  </div>
</div>

<div class="row">
 <div class="col-xs-5 coa-xs-offset-1">
  <div class="image-form">
    <div class="image-box">
     <%= f.label "画像の登録" %>
   </div>
   <%= f.attachment_field :image, style:"margin-left:80px" %>
 </div>
</div>

<div class="col-xs-5">

 <div class="field form-group">
   <%= f.label :name, "商品名" %>
   <%= f.text_field :name, class: "form-control" %>
 </div>

 <div class="field form-group">
   <%= f.label :description, "商品紹介" %>
   <%= f.text_area :description, class: "form-control" %>
 </div>

 <!-- genreを選択機能 未実装 -->
 <div class="field form-group">
   <%= f.label :genre, "ジャンル" %><br>
   <%= f.collection_select(:genre_id, Genre.all, :id, :name,:prompt => "選択してください") %>
 </div>

 <div class="field form-group">
   <%= f.label :unit_price, "税抜き価格" %>
   <%= f.number_field :unit_price, class: "form-control" %>
 </div>

 <div class="field form-group">
   <%= f.label :is_selling, "販売ステータス" %><br>
   <%= f.select :is_selling, {販売中: 1, 販売停止: 0}, class: "form-control" %>
 </div>

</div>

</div>


<div class="row">
  <div class="col-xs-2 col-xs-offset-10">
    <div class="action">
      <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>

<% end %>

</div>

