
<div class="container">

    <p style="font-size:20pt;">配送先編集</p>

    <%= form_for @address, url: customers_customer_address_path(current_customer) do |f| %>

    <table style="border: 0px none;">

      <tbody>
                <tr>
                  <td><%= f.label :郵便番号（ハイフンなし） %></td>
                  <td><%= f.text_field :shipping_postal_code %></td>
                </tr>

                <tr>
                  <td><%= f.label :住所 %></td>
                  <td><%= f.text_field :shipping_address %></td>
                </tr>

                <tr>
                  <td><%= f.label :宛名 %></td>
                  <td><%= f.text_field :shipping_name %></td>
                </tr>

                <tr>
                  <td><%= f.submit "編集する",class: "btn btn-primary" %></td>
                </tr>
      </tbody>

    </table>

    <% end %>

</div>
